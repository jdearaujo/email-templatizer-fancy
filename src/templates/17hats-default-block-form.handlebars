<h3 class="text-center block-title">White Block</h3>

<section class="vertical-tabs clearfix">
  <aside class="vertical-controls">
    <a data-toggle="tooltip" data-placement="right" title="Pick a background" href="#background" class="active"><span class="glyphicon glyphicon-tint"></span></a>
    <a data-toggle="tooltip" data-placement="right" title="Add text" href="#text"><span class="glyphicon glyphicon-pencil"></span></a>
    <a data-toggle="tooltip" data-placement="right" title="Create button" href="#button"><span class="glyphicon glyphicon-link"></span></a>
    <a data-toggle="tooltip" data-placement="right" title="Add picture" href="#picture"><span class="glyphicon glyphicon-picture"></span></a>
    <a data-toggle="tooltip" data-placement="right" title="Add Analytics" href="#analytics"><span class="glyphicon glyphicon-bullhorn"></span></a>
  </aside>

  <form role="form">
    <section class="vertical-content" id="background">
      <div class="page-header">
        <h3 class="text-center text-thin text-muted">Pick a background</h3>
      </div>

      <div class="style-radios text-center">
        <div class="form-group pseudo-radio white active">
          <label>White<input checked type="radio" name="style" value='{"background":"#ffffff","hcolor":"#444444","pcolor":"#888888"}'></label>
        </div>
        <div class="form-group pseudo-radio light-blue">
          <label>Light Blue<input type="radio" name="style" value='{"background":"#d8e6ec","hcolor":"#444444","pcolor":"#888888"}'></label>
        </div>
        <div class="form-group pseudo-radio dark-blue">
          <label>Dark Blue<input type="radio" name="style" value='{"background":"#0c6486","hcolor":"#ffffff","pcolor":"#cccccc"}'></label>
        </div>
        <div class="form-group pseudo-radio tan">
          <label>Tan<input type="radio" name="style" value='{"background":"#eeebe3","hcolor":"#444444","pcolor":"#888888"}'></label>
        </div>
      </div>
    </section>

    <section class="vertical-content" id="text">
      <div class="page-header">
        <h3 class="text-center text-thin text-muted">Add text</h3>
      </div>

      <div class="form-group">
        <input type="text" name="headline" class="form-control" placeholder="Heading">
      </div>
      <div class="form-group">
        <textarea name="content" class="form-control" rows="6" placeholder="Content"></textarea>
      </div>
    </section>

    <div class="vertical-content" id="button">
      <div class="page-header">
        <h3 class="text-center text-thin text-muted">Create a button</h3>
      </div>

      <div class="form-group">
        <input type="text" name="button_text" class="form-control" placeholder="Button Text">
      </div>
      <div class="form-group">
        <input type="text" name="button_href" class="form-control" placeholder="Button Link">
      </div>
    </div>

    <div class="vertical-content" id="picture">
      <div class="page-header">
        <h3 class="text-center text-thin text-muted">Add a picture</h3>
      </div>

      <div class="form-group">
        <input type="text" name="image_name" class="form-control" placeholder="Image Filename">
      </div>
      <div class="form-group">
        <input type="text" name="image_width" class="form-control" placeholder="Image Width">
        <small class="help-block">The image size is usually in the filename.</small>
      </div>
      <div class="form-group">
        <input type="text" name="image_height" class="form-control" placeholder="Image Height">
        <small class="help-block">Don't forget to divide by 2 for high DPI images.</small>
      </div>
      <div class="form-group">
        <input type="text" name="image_alt" class="form-control" placeholder="ALT Text">
      </div>
      <div class="form-group">
        <input type="text" name="image_link" class="form-control" placeholder="Image Link">
      </div>
    </div>

    <div class="vertical-content" id="analytics">
      <div class="page-header">
        <h3 class="text-center text-thin text-muted">Add analytics code</h3>
      </div>

      <div class="form-group">
        <input type="text" name="ga_source" class="form-control" placeholder="GA Source">
      </div>
      <div class="form-group">
        <input type="text" name="ga_campaign" class="form-control" placeholder="GA Campaign">
      </div> 
    </div>

    <br><br>
  </form>

  <div class="move-controls">
    <a class="btn btn-sm btn-info move move-up"><span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span> Move Up</a> 
    <a class="btn btn-sm btn-info move move-down"><span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span> Move Down</a>
    <a class="btn btn-sm btn-danger delete pull-right"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</a> 
  </div>
</section>